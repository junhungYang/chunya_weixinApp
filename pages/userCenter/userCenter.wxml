    <view class="order">
        <view class="title" bindtap="navToOrderList">
            <view>我的订单</view>
            <view>
                <text>查看全部订单</text>
                <image src="../../img/redictTo.png" />
            </view>
        </view>
        <view class="nav">
            <view data-index="{{undefined}}" bindtap="getOrderList">
                <image src="../../img/userCenter/nav1.png"/>
                <text>待付款</text>
            </view>
            <view data-index="{{201}}" bindtap="getOrderList">
                <image src="../../img/userCenter/nav2.png" />
                <text>待发货</text>
            </view>
            <view data-index="{{300}}" bindtap="getOrderList">
                <image src="../../img/userCenter/nav3.png" />
                <text>待收货</text>
            </view>
            <view data-index="{{301}}" bindtap="getOrderList">
                <image src="../../img/userCenter/nav4.png" />
                <text>待评价</text>
            </view>
            <view>
                <image src="../../img/userCenter/nav5.png" />
                <text>售后服务</text>
            </view>
        </view>
        <view class="cont">
            <view class="list">
                <view class="cont-item"  wx:if="{{orderInfo}}">
                    <view class="cont-title">
                        <text>最新订单</text>
                        <text>{{orderInfo.add_time}}</text>
                    </view>
                    <view wx:for="{{orderInfo.orderGoodsList}}">
                        <view class="desc">
                            <image src="{{item.list_pic_url}}" />
                            <view class="desc-text">
                                <view>
                                    <image src="../../img/userCenter/icon3.png" />
                                    <text>{{orderInfo.order_status_text}}</text>
                                </view>
                                <view>
                                    备注:无
                                </view>
                            </view>
                        </view>
                    </view>
                </view>
            </view>
        </view>
    </view>
    <view class="tool">
        <view class="title">
            必备工具
        </view>
        <view class="list">
            <view class="item">
                <image src="../../img/userCenter/coupon.png" />
                <text>优惠券</text>
            </view>
            <view class="item">
                <image src="../../img/userCenter/collect.png" />
