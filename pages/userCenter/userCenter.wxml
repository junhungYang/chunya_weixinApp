            </view>
            <view class="item">
                <image src="../../img/userCenter/kefu.png" />
                <text>客服</text>
            </view>
            <view class="item">
                <image src="../../img/userCenter/yijian.png" />
                <text>意见反馈</text>
            </view>
            <view class="item">
                <image src="../../img/userCenter/position.png" bindtap="navToAddressList"/>
                <text>地址管理</text>
            </view>
            <view class="item">
                <image src="../../img/userCenter/about.png" />
                <text>关于我们</text>
            </view>
        </view>
    </view>
    </view>
</view>
