  border-radius: 22rpx;
  border: 1px solid #b2b2b2;
  line-height: 44rpx;
  text-align: center;
  font-size: 28rpx;
  color: #313131;
  padding: 0 13rpx;
}
.template .control .btn-group view:nth-of-type(2) {
  margin-left: 20rpx;
