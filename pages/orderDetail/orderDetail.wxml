
<view class="template">
    <view class="state">
        <image src="../../img/orderDetail/bg.jpg" />
        <view>
            <text>{{data.orderInfo.order_status_text}}</text>
            <text></text>
        </view>
    </view>
    <view class="logistics">
        <!--<view class="desc">
            <image src="../../img/orderDetail/icon1.png" />
