.input-box {
  background: linear-gradient(to right, #2ba152,#2da7cb);
  height: 88rpx;
  position: relative;
}

@font-face {
  font-family: 'iconfont';  /* project id 871069 */
  src: url('//at.alicdn.com/t/font_871069_c1mtfzdeti.eot');
  src: url('//at.alicdn.com/t/font_871069_c1mtfzdeti.eot?#iefix') format('embedded-opentype'),
  url('//at.alicdn.com/t/font_871069_c1mtfzdeti.woff') format('woff'),
  url('//at.alicdn.com/t/font_871069_c1mtfzdeti.ttf') format('truetype'),
