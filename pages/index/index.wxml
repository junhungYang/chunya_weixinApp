<!--index.wxml-->
<!--<button bindtap="shangchuan">上传视频</button>-->
<view class="container">
  <view class="input-box">
      <view class="mask {{searchText?'':'iconfont icon-search'}}">{{searchText?'':'搜索'}}</view>
    <input type="text" class="iconfont icon-search" class="bgText"  bindinput="searchInput"
    value="{{searchText}}" bindblur="hidSearchList" maxlength="1"/>
    <view class="search-list" hidden="{{searchListHid}}">
      <view class="haveGoods" wx:if="{{searchList.length!==0}}">
        <view wx:for="{{searchList}}" data-goodId="{{item.id}}" bindtap="navToGoodDetail">
          {{item.name}}
        </view> 
      </view>
      <view class="noGoods" wx:else >
        没有该商品
      </view>
    </view>
  </view>
  <view class="swiper-box">
    <my-swiper></my-swiper>
  </view>
  <view class="nav">
    <view class="item">
      <form bindsubmit="formSubmit_collect" report-submit="true">
          <button  formType="submit"  hover-class="none" class="getFromId" data-type="haowu" bindtap="navToColorBtnMod">
              <image src="../../img/index/haowu.png"/>
              <text>好物</text>
          </button>
      </form>  
    </view>
    <view class="item">
       <form bindsubmit="formSubmit_collect" report-submit="true">
          <button  formType="submit"  hover-class="none" class="getFromId" data-type="nuanke" bindtap="navToColorBtnMod">
              <image src="../../img/index/nuanke.png"/>
              <text>暖课</text>
          </button>
      </form>  
    </view>
    <view class="item">
      <form bindsubmit="formSubmit_collect" report-submit="true">
          <button  formType="submit"  hover-class="none" class="getFromId" data-type="public" bindtap="navToColorBtnMod">
            <image src="../../img/index/gongyi.png" />
            <text>公益</text>
        </button>
      </form>  
    </view>
    <view class="item">
      <form bindsubmit="formSubmit_collect" report-submit="true">
        <button  formType="submit"  hover-class="none" class="getFromId" data-type="story" bindtap="navToColorBtnMod">
          <image src="../../img/index/gushi.png" />
          <text>故事</text>
        </button>
      </form> 
    </view>
    <view class="item">
      <form bindsubmit="formSubmit_collect" report-submit="true">
        <button  formType="submit"  hover-class="none" class="getFromId" data-type="signin" bindtap="navToColorBtnMod">
          <image src="../../img/index/qiandao.png" />
          <text>签到</text>
        </button>
      </form> 
    </view>
  </view>
  <view class="index-cont">
      <view class="hot-events">
        <view class="hotEvents-title">
          <text>热门活动</text>
          <text>{{commActiveIndex}} / {{commonwealList.length}}</text>
        </view>
        <!--<view class="swiper-public" >
             <public-swiper commonweal-list="{{commonwealList}}"></public-swiper>
        </view> -->
     
        <scroll-view class="events-cont" scroll-x="{{true}}" bindscroll="changeCommIndex">
          <image id="events-item" wx:for="{{commonwealList}}" src="{{item.image_url}}" data-url="{{item.link}}" bindtap="navToPublicDetail"/>
        </scroll-view>
      </view>
      <view class="hot-goods">
        <view class="hotgoods-title">
          <text>热销产品</text><text>HOT-SALE PRODUCTS</text>
        </view>
        <view class="goods-item">
          <view class="list">
            <view class="list-item"  wx:for="{{goodsList}}">
              <form bindsubmit="formSubmit_collect" report-submit="true">
                  <button  formType="submit"  hover-class="none" class='invisibleclass' data-goodId="{{item.id}}" bindtap="navToGoodDetail">
                      <view class="img-wrap">
                            <image src="{{item.primary_pic_url}}" mode="widthFix"/>
                      </view>
                      <text>{{item.name}}</text>
                      <view class="price">
                        <text class="now-price">￥{{item.retail_price}}</text>
                        <text class="old-price">￥{{item.market_price}}</text>
                      </view>
                  </button>
              </form>      
            </view>
          </view>
        </view>
      </view>
  </view>

  <view class="fixed-group">
    <image src="../../img/index/kefu_icon.png" />
    <button open-type="contact" size="20" class="contact"></button>
    <image class="toTop" src="../../img/index/toTop_icon.png" bindtap="scrollToTop"/>
  </view>
</view>
