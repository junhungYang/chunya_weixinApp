.template {
  min-height: 100vh;
  background: #f2f2f2;
}
.template .main .title,
.template .main .content,
.template .main .img-group {
  background: #fff;
  padding: 0 6.4%;
}
.template .main .title,
.template .main .content {
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}
.template .main .title .scroll-view,
.template .main .content .scroll-view {
  height: 100%;
  overflow: hidden;
}
.template .main .title .scroll-view textarea,
.template .main .content .scroll-view textarea {
  font-size: 24rpx;
  line-height: 28rpx;
  color: #313131;
}
.template .main .title {
  height: 162rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #f2f2f2;
}
.template .main .content {
  height: 222rpx;
  box-sizing: border-box;
}
.template .main .placeHolder {
  font-size: 24rpx;
  color: #c1c1c1;
}
.template .main .img-group {
  height: 120rpx;
  padding-bottom: 20rpx;
}
.template .main .img-group view {
  width: 120rpx;
  height: 120rpx;
  overflow: hidden;
  position: relative;
}
.template .main .img-group view image {
  width: 120rpx;
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
}
.template .toTop {
  margin-top: 20rpx;
  background: #fff;
  padding: 0 6.4%;
  display: flex;
  height: 82rpx;
  /*白色样式（false的样式）*/
  /*绿色样式（true的样式）*/
}
.template .toTop image {
  width: 38rpx;
  height: 38rpx;
  align-self: center;
}
.template .toTop text {
  line-height: 82rpx;
  font-size: 28rpx;
  padding-left: 21rpx;
  flex: 1;
}
.template .toTop view {
  padding-top: 11rpx;
}
.template .toTop .wx-switch-input {
  width: 82rpx !important;
  height: 36rpx !important;
  background: #2ca5ae !important;
  border: #2ca5ae !important;
}
.template .toTop .wx-switch-input::before {
  width: 82rpx !important;
  height: 36rpx !important;
}
.template .toTop .wx-switch-input::after {
  width: 40rpx !important;
  height: 36rpx !important;
}
.template .fixed-btn {
  position: fixed;
  width: 380rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  background: #2ca5ae;
  border-radius: 40rpx;
  bottom: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 28rpx;
}
