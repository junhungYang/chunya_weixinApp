<view class="template">
    <view class="input-box">
        <view class="mask {{searchText?'':'iconfont icon-search'}}">{{searchText?'':'搜索'}}</view>
        <input type="text" class="iconfont icon-search" class="bgText"  bindinput="searchInput"
        value="{{searchText}}" bindblur="hidSearchList"/>
        <view class="search-list" hidden="{{searchListHid}}">
        <view class="haveGoods" wx:if="{{searchList.length!==0}}">
            <view wx:for="{{searchList}}" data-goodId="{{item.id}}" bindtap="navToGoodDetail">
            {{item.name}}
            </view> 
        </view>
        <view class="noGoods" wx:else >
            没有该商品
        </view>
        </view>
    </view>
    <view class="swiper-box">
        <my-swiper></my-swiper>
    </view>
    <view class="list">
        <view class="big-item">
            <view class="goods-item">
            <view class="header">
                <image src="../../img/index/good_banner.jpg" />
                <text>贴心｜爱意｜惊喜｜舒心</text>
            </view>
            <view class="list">
                <view class="list-item"  wx:for="{{goodsList}}">
                <form bindsubmit="formSubmit_collect" report-submit="true">
                    <button  formType="submit"  hover-class="none" class='invisibleclass' data-goodId="{{item.id}}" bindtap="navToGoodDetail">
                        <image src="../../img/index/good_main1.jpg" />
                        <text>{{item.name}}格里高利+礼盒装卫生巾 棉柔透气日夜用组合</text>
                        <view class="price">
                            <text class="now-price">￥{{item.retail_price}}0.1</text>
                            <text class="old-price">￥{{item.market_price}}1</text>
                        </view>
                    </button>
                </form>      
                </view>
            </view>
            </view>
        </view>
        <view class="big-item">
            <view class="goods-item">
            <view class="header">
                <image src="../../img/index/good_banner.jpg" />
                <text>贴心｜爱意｜惊喜｜舒心</text>
            </view>
            <view class="list">
                <view class="list-item"  wx:for="{{goodsList}}">
                <form bindsubmit="formSubmit_collect" report-submit="true">
                    <button  formType="submit"  hover-class="none" class='invisibleclass' data-goodId="{{item.id}}" bindtap="navToGoodDetail">
                        <image src="../../img/index/good_main1.jpg" />
                        <text>{{item.name}}格里高利+礼盒装卫生巾 棉柔透气日夜用组合</text>
                        <view class="price">
                            <text class="now-price">￥{{item.retail_price}}0.1</text>
                            <text class="old-price">￥{{item.market_price}}1</text>
                        </view>
                    </button>
                </form>      
                </view>
            </view>
            </view>
        </view>
    </view>
    
</view>
