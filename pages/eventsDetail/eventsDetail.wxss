.template .header {
  height: 269rpx;
  overflow: hidden;
  position: relative;
}
.template .header .bg {
  width: 100%;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}
.template .header .cont {
  display: flex;
  padding: 40rpx 6.4% 33rpx 6.4%;
  background: rgba(0, 0, 0, 0.7);
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  box-sizing: border-box;
}
.template .header .cont image {
  width: 198rpx;
  height: 198rpx;
  border-radius: 10rpx;
}
.template .header .cont .title {
  flex: 1;
  padding-left: 41rpx;
  line-height: 32rpx;
  font-size: 28rpx;
  color: #fff;
  font-weight: bold;
}
.template .time-place {
  padding: 30rpx 6.4% 30rpx 6.4%;
  border: 1px solid #f2f2f2;
  display: flex;
}
.template .time-place .info {
  flex: 1;
}
.template .time-place .info text {
  color: #b2b2b2;
  font-weight: 24rpx;
  font-size: 24rpx;
  line-height: 24rpx;
  display: block;
}
.template .time-place .info text:last-of-type {
  margin-top: 35rpx;
}
.template .time-place image {
  width: 46rpx;
  height: 46rpx;
  align-self: center;
}
.template .content {
  padding: 40rpx 6.4% 100rpx 6.4%;
}
.template .content .fr-fin {
  width: 100% !important;
}
.template .fixed-btn {
  position: fixed;
  left: 0;
  right: 0;
  height: 100rpx;
  bottom: 0;
  display: flex;
}
.template .fixed-btn view:first-of-type {
  width: 150rpx;
  background: #f2f2f2;
}
.template .fixed-btn view:first-of-type button {
  width: 100%;
  height: 100%;
  display: block;
  margin: 0;
  padding: 0;
  background: transparent;
  line-height: 0;
  text-align: center;
}
.template .fixed-btn view:first-of-type button image,
.template .fixed-btn view:first-of-type button text {
  display: block;
}
.template .fixed-btn view:first-of-type button image {
  width: 30rpx;
  height: 40rpx;
  margin: 0 auto;
  margin-top: 15rpx;
}
.template .fixed-btn view:first-of-type button text {
  font-size: 20rpx;
  color: #999;
  line-height: 20rpx;
  margin-top: 14rpx;
}
.template .fixed-btn view:first-of-type button::after {
  border: 0;
}
.template .fixed-btn view:last-of-type {
  flex: 1;
  background: #d1051f;
  line-height: 100rpx;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
}
