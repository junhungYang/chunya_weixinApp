                <view class="collect-share">
                    <view bindtap="collect">
                        <image src="{{collectState === 'add' ? '../../img/goodDetail/collect1.png' : '../../img/goodDetail/collect.png'}}" />
                        <text>{{collectState==='add'?'已收藏':'收藏'}}</text>
                    </view>
                    <button open-type="share" class="share-btn">
                        <image src="../../img/goodDetail/share.png" />
                        <text>分享</text>
                    </button>
                </view>
           </view> 
           <view class="choose" data-index="{{1}}" bindtap="cartStateManage">
               <view class="menu">
                   <text>选择:</text>
                   <text>规格</text>
                   <text>重量</text>
                   <text>包装</text>
               </view>
               <image src="../../img/redictTo.png" />
           </view> 
        </view>
        <view class="service">
            <view class="up">
                <text>服务：</text>
                <text>支持7天无理由退货</text>
            </view>
            <view class="bottom">
                <view>
                    <image src="../../img/goodDetail/redTickIcon.png" />
                    <text>企业认证</text>
                </view>
                <view>
                    <image src="../../img/goodDetail/redTickIcon.png" />
                    <text>店铺认证</text>
                </view>
                <view>
                    <image src="../../img/goodDetail/redTickIcon.png" />
                    <text>担保交易</text>
                </view>
            </view>
            <image class="icon" src="../../img/redictTo.png" />
        </view>
        <view class="shop-nav" bindtap="navToIndex">
            <image src="../../img/logo.png" />
            <view>
                <text>春芽健康科技</text>
                <text>chunya Health Technology</text>
                <text>官方</text>
                <view class="btn">进店</view>
            </view>
        </view>
        <view class="reviews">
            <view class="title">
                <text>用户评价:</text>
                <view class="start-list">
                    <image src="../../img/goodDetail/start.png" />
                     <image src="../../img/goodDetail/start.png" />
                      <image src="../../img/goodDetail/start.png" />
                       <image src="../../img/goodDetail/start.png" />
                </view>
                <view class="quantity">
                    <text>{{reviews.count}}条评论</text>
                    <image src="../../img/redictTo.png" />
                </view>
            </view>
            <view class="list">
                <view class="item" wx:for="{{reviews.data}}">
                    <view class="item-header">
                        <view class="pro-pic">
                            <image src="{{item.user_info.avatar}}" />
                        </view>
                        <view class="name-time">
                            <text class="name">{{item.user_info.nickname}}</text>
                            <view class="time">
                                <text>{{item.add_time}}</text>
                            </view>
                        </view>
                    </view>
                    <view class="item-cont">
                        <view class="text">
                            {{item.content}}
                        </view>
                        <view class="pic-group">
                            <image src="{{item1.pic_url}}" wx:for-item="item1" wx:for="{{item.pic_list}}" />
                    
                        </view>
                    </view>
                </view>
            </view>
        </view>
        <view class="promise">
            <image src="../../img/goodDetail/promise.png" />
        </view>
        <view class="good-detail" id="good-detail">
            <view class="text">
                <text>— 商品详情 —</text>
                <text>COMMODITY DETAILS</text>
            </view>
            <view class="image">
                <rich-text nodes="{{detail.info.goods_desc}}"></rich-text>
            </view>
        </view>
    </view>
      <view class="fixed-group">
        <button open-type="contact" size="20" class="contact">
            <image src="../../img/index/kefu_icon.png" />
        </button>
        <image class="toTop" src="../../img/index/toTop_icon.png" bindtap="scrollToTop"/>
    </view>
    <view class="bottom-nav">
        <view class="other">
            <view bindtap="navToIndex">
                <image src="../../img/goodDetail/home_icon.png" />
                <text>主页</text>
            </view>
            <view>
                <button open-type="contact" size="20" class="contact">
                    <image src="../../img/goodDetail/kefu_icon.png" />
                    <text>客服</text>
                </button>
            </view>
            <view bindtap="switchToCart">
                <image src="../../img/goodDetail/cart_icon.png" />
                <text>购物车</text>
            </view>
        </view>
        <view class="cart-add" >
            <form bindsubmit="formSubmit_collect" report-submit="true">
                <button  formType="submit"  hover-class="none" class='invisibleclass' data-index="{{1}}"
            bindtap="cartStateManage">加入购物车</button>
            </form> 
        </view>
        <view class="buy-btn">
            <form bindsubmit="formSubmit_collect" report-submit="true">
                <button  formType="submit"  hover-class="none" class='invisibleclass' data-index="{{1}}"
            bindtap="cartStateManage">立即购买</button>
            </form>  
        </view>
    </view>
    <view class="cart-control" hidden="{{cartShowFlag}}">
        <view class="box">
            <view class="info">
                <view class="text-img">
                    <image src="{{activeProduct.primary_pic_url}}" />
                    <view class="about">
                        <view class="name">
                            {{activeProduct.goods_name}}
                        </view>
                        <view class="price-size">
                            <view class="price">
                                ￥{{activeProduct.retail_price}}
                            </view>
                            <view class="size">
                                <view class="{{activeProduct.id===item.id?'active':''}}"
                                 wx:for="{{detail.productList}}" 
                                 data-item="{{item}}" bindtap="chooseProduct">
                                    {{item.product_name}}
                                </view>
                            </view>
                        </view>
                    </view>
                    <view class="close" data-index="{{2}}" bindtap="cartStateManage">
                        <image src="../../img/goodDetail/cart_close.png" />
                    </view>
                </view>
                <view class="quantity-control">
                    <view class="quantity">
                        <text>库存数量</text>
                        <text>剩余{{activeProduct.goods_number}}件</text>
                    </view>
                    <view class="control">
                        <view class="minus" data-index="{{2}}" bindtap="quantityControl">
                            -
                        </view>
                        <view class="num">
                            {{quantity}}
                        </view>
                        <view class="add" data-index="{{1}}" bindtap="quantityControl">
                            +
                        </view>
                    </view>
                </view>
            </view>
            <view class="next-btn">
                <form bindsubmit="formSubmit_collect" report-submit="true">
                <button  formType="submit"  hover-class="none" class='invisibleclass'
            bindtap="cartAdd">下一步</button>
            </form>  
            </view>
        </view>
    </view>
