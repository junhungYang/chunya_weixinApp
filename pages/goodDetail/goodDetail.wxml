<view class="template">
    <view class="nav">
        <text bindtap="scrollToDom" class="{{navActive===1?'nav-active':''}}" data-index="{{1}}">宝贝</text>
        <text bindtap="scrollToDom" class="{{navActive===2?'nav-active':''}}" data-index="{{2}}">详情</text>
        <text bindtap="scrollToDom" class="{{navActive===3?'nav-active':''}}" data-index="{{3}}">评价</text>
    </view>
    <view class="goodMod">
        <view class="swiper">
            <good-swiper gallery="{{detail.gallery}}"></good-swiper>
        </view>
        <view class="goodInfo">
           <view class="info">
                <view class="text">
                    <view class="name">
                        {{detail.info.name}}
                    </view>
                    <view class="desc">
                        {{detail.info.goods_brief}}
                    </view>
                </view>
                <view class="price">
                    <text class="new">￥{{detail.info.retail_price_range}}</text>
                    <text class="old">￥{{detail.info.market_price_range}}</text>
                </view>
