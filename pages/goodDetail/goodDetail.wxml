                        <view class="pic-group">
                            <image src="../../img/goodDetail/review_pic1.png" />
                            <image src="../../img/goodDetail/review_pic2.png" />
                        </view>
                    </view>
                </view>
            </view>
        </view>
        <view class="promise">
            <image src="../../img/goodDetail/promise.png" />
        </view>
        <view class="good-detail">
            <view class="text">
                <text>— 商品详情 —</text>
                <text>COMMODITY DETAILS</text>
            </view>
            <view class="image">
                <rich-text nodes="{{detail.info.goods_desc}}"></rich-text>
            </view>
        </view>
    </view>
      <view class="fixed-group">
        <button open-type="contact" size="20" class="contact">
            <image src="../../img/index/kefu_icon.png" />
        </button>
        <image class="toTop" src="../../img/index/toTop_icon.png" bindtap="scrollToTop"/>
    </view>
    <view class="bottom-nav">
        <view class="other">
            <view bindtap="navToIndex">
                <image src="../../img/goodDetail/home_icon.png" />
                <text>主页</text>
            </view>
            <view>
                <button open-type="contact" size="20" class="contact">
                    <image src="../../img/goodDetail/kefu_icon.png" />
                    <text>客服</text>
                </button>
            </view>
            <view bindtap="switchToCart">
                <image src="../../img/goodDetail/cart_icon.png" />
                <text>购物车</text>
            </view>
        </view>
        <view class="cart-add" 
        data-index="{{1}}"
        bindtap="cartStateManage">
            加入购物车
        </view>
        <view class="buy-btn" data-index="{{1}}" bindtap="cartStateManage">
            立即购买
        </view>

    </view>
    <view class="cart-control" hidden="{{cartShowFlag}}">
        <view class="box">
            <view class="info">
                <view class="text-img">
                    <image src="{{detail.info.primary_pic_url}}" />
                    <view class="about">
                        <view class="name">
                            {{detail.info.name}}
                        </view>
                        <view class="price-size">
                            <view class="price">
                                ￥{{productPrice}}
                            </view>
                            <view class="size">
                                <view class="{{activeProduct.id===item.id?'active':''}}"
                                 wx:for="{{detail.productList}}" 
                                 data-item="{{item}}" bindtap="chooseProduct">
                                    {{item.product_name}}
                                </view>
                            </view>
                        </view>
                    </view>
                    <view class="close" data-index="{{2}}" bindtap="cartStateManage">
                        <image src="../../img/goodDetail/cart_close.png" />
                    </view>
                </view>
                <view class="quantity-control">
                    <view class="quantity">
                        <text>购买数量</text>
                        <text>剩余{{detail.info.goods_number}}件</text>
                    </view>
                    <view class="control">
                        <view class="minus" data-index="{{2}}" bindtap="quantityControl">
                            -
                        </view>
                        <view class="num">
                            {{quantity}}
                        </view>
                        <view class="add" data-index="{{1}}" bindtap="quantityControl">
                            +
                        </view>
                    </view>
                </view>
            </view>
            <view class="next-btn" bindtap="cartAdd">
                下一步
            </view>
        </view>
    </view>
