<my-swiper>
  <view class="container">
  <view class="page-body">
    <view class="page-section page-section-spacing swiper">
      <swiper class="swiper-box" autoplay="{{true}}" bindchange="swiperEvent"
        indicator-dots="{{false}}"  vertical="{{false}}"   next-margin="20rpx">
        <block wx:for="{{commonwealList}}" wx:key="*this" wx:for-index="index">
          <swiper-item data-item="{{item}}"  >
            <image class="swiper-item" src="{{item.image_url}}" data-url="{{item.link}}" bindtap="navToPublicDetail"/>
          </swiper-item>
        </block>
      </swiper>
    </view>
  </view>
</view>
</my-swiper>