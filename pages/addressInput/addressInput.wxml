<view class="template">
    <view class="main">
        <view class="person">
            <view class="title">
                收货人
            </view>
            <view class="cont">
                <view>
                    <text>姓名</text>
                    <input type="text" value="{{detail.userName}}" placeholder="真实姓名"/>
                </view>
                <view>
                    <text>电话</text>
                    <input value="{{detail.telNumber}}" placeholder="手机号码"/>
                    <button class="getNum-btn"  open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber">获取手机号码</button>
                </view>
            </view>
        </view>
        <view class="address">
            <view class="title">
                收货地址
            </view>
            <view class="cont">
                <view>
                    <text>地区信息</text>
                    <input type="text" value="{{detail.}}"/>
                    <image src="../../img/positionIcon.png" class="icon" />
                </view>
                <view>
                    <text>详细地址</text>
                    <input type="text" placeholder="街道门派、楼层房间号等信息"/>
                </view>
            </view>
        </view>
        <view class="getAddress" bindtap="chooseAddress">
            <image src="../../img/wechatIcon.png" />
            <text>一键添加微信地址</text>
        </view>
    </view>
    <view class="save-btn">
        保存并使用
    </view>
</view>
