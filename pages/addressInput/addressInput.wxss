.template {
  background: #f2f2f2;
  height: 100vh;
}
.template .main {
  margin: 0 6.4%;
  position: relative;
}
.template .main .person .title,
.template .main .address .title {
  padding-top: 12rpx;
  height: 75rpx;
  font-size: 28rpx;
  color: #b2b2b2;
  line-height: 87rpx;
}
.template .main .person .cont,
.template .main .address .cont {
  height: 176rpx;
  background: #fff;
  border-radius: 12rpx;
}
.template .main .person .cont .name,
.template .main .address .cont .name {
  border-bottom: 1px solid #f7f7f7;
  height: 87rpx;
}
.template .main .person .cont .name input,
.template .main .address .cont .name input {
  height: 100%;
  line-height: 87rpx;
}
.template .main .person .cont .address-input,
.template .main .address .cont .address-input {
  height: 87rpx;
  border-bottom: 1px solid #f7f7f7;
}
.template .main .person .cont .address-input text:nth-of-type(2),
.template .main .address .cont .address-input text:nth-of-type(2) {
  flex: 1;
  color: #b2b2b2;
}
.template .main .person .cont .address-input .icon,
.template .main .address .cont .address-input .icon {
  width: 32rpx;
  height: 40rpx;
  align-self: center;
}
.template .main .person .cont view:last-of-type,
.template .main .address .cont view:last-of-type {
  height: 88rpx;
}
.template .main .person .cont view:last-of-type .getNum-btn,
.template .main .address .cont view:last-of-type .getNum-btn {
  width: 152rpx;
  height: 44rpx;
  border: 1px solid #2ca5ae;
  font-size: 24rpx;
  color: #2ca5ae;
  margin: 0;
  padding: 0 16rpx;
  align-self: center;
  box-sizing: content-box;
  line-height: 44rpx;
}
.template .main .person .cont view,
.template .main .address .cont view {
  margin: 0 30rpx;
  display: flex;
}
.template .main .person .cont view text,
.template .main .address .cont view text,
.template .main .person .cont view input,
.template .main .address .cont view input {
  font-size: 28rpx;
  line-height: 87rpx;
}
.template .main .person .cont view text,
.template .main .address .cont view text {
  width: 177rpx;
  color: #313131;
}
.template .main .person .cont view input,
.template .main .address .cont view input {
  height: 100%;
  flex: 1;
  color: #b2b2b2;
}
.template .main .getAddress {
  position: absolute;
  right: 0;
  top: 26rpx;
}
.template .main .getAddress image {
  width: 32rpx;
  height: 26rpx;
  vertical-align: middle;
}
.template .main .getAddress text {
  margin-left: 11rpx;
  font-size: 24rpx;
  color: #2ba153;
  vertical-align: middle;
}
.template .save-btn {
  height: 100rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #d1051f;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
}
