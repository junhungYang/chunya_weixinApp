.template {
  background: #f2f2f2;
  position: absolute;
  min-height: 100vh;
}
.template .bg {
  height: 253rpx;
  width: 100%;
  background: linear-gradient(to right, #2ba152, #2da7cb);
  position: absolute;
  left: 0;
  top: 0;
}
.template .title {
  height: 70rpx;
  position: relative;
  line-height: 70rpx;
}
.template .title view:first-of-type {
  position: absolute;
  left: 6.4%;
}
.template .title view:first-of-type image {
  width: 32rpx;
  height: 29rpx;
  vertical-align: middle;
}
.template .title view:first-of-type text {
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #fff;
  vertical-align: middle;
}
.template .title view:last-of-type {
  position: absolute;
  right: 6.4%;
  font-size: 28rpx;
  color: #fff;
  top: 5rpx;
}
.template .list {
  padding-bottom: 100rpx;
}
.template .list .item {
  width: 87.2%;
  min-height: 294rpx;
  margin: 0 6.4%;
  box-sizing: border-box;
  padding: 0 18rpx;
  margin-top: 18rpx;
  display: flex;
  background: #fff;
  border-radius: 15rpx;
  position: relative;
}
.template .list .item .choose {
  width: 42rpx;
  position: relative;
}
.template .list .item .choose image {
  position: absolute;
  left: 0;
  top: 50%;
  width: 32rpx;
  height: 32rpx;
  transform: translateY(-50%);
}
.template .list .item .image {
  width: 176rpx;
  position: relative;
}
.template .list .item .image image {
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 176rpx;
  height: 176rpx;
}
.template .list .item .text {
  flex: 1;
  margin-left: 20rpx;
  position: relative;
}
.template .list .item .text text:first-of-type {
  margin-top: 53rpx;
  display: block;
  font-size: 28rpx;
  color: #313131;
  line-height: 38rpx;
  letter-spacing: 1rpx;
  max-height: 76rpx;
  overflow: hidden;
}
.template .list .item .text text:nth-of-type(2) {
  display: inline-block;
  height: 28rpx;
  padding: 0 8rpx;
  text-align: center;
  line-height: 28rpx;
  font-size: 20rpx;
  border: 1px solid #ed015c;
  color: #ed015c;
}
.template .list .item .text text:last-of-type {
  position: absolute;
  left: 0;
  bottom: 68rpx;
  color: #d1051f;
  font-size: 24rpx;
}
.template .list .item .quantity-control {
  position: absolute;
  right: 21rpx;
  bottom: 50rpx;
  width: 240rpx;
  height: 64rpx;
  display: flex;
}
.template .list .item .quantity-control view {
  flex: 1;
  font-size: 24rpx;
  line-height: 60rpx;
  text-align: center;
}
.template .list .item .quantity-control .minus {
  border: 1px solid #e8e8e8;
  border-right: 0;
  border-top-left-radius: 8rpx;
  border-bottom-left-radius: 8rpx;
  color: #999;
  background: #f8f8f8;
}
.template .list .item .quantity-control .num,
.template .list .item .quantity-control .add {
  border: 1px solid #999;
  color: #313131;
}
.template .list .item .quantity-control .num {
  border-right: 0;
}
.template .list .item .quantity-control .add {
  border-top-right-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
}
.template .explain {
  height: 313rpx;
  line-height: 313rpx;
  text-align: center;
}
.template .explain image {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}
.template .explain text {
  margin-left: 20rpx;
  font-size: 24rpx;
  color: #b2b2b2;
  vertical-align: middle;
}
.template .all-price {
  height: 100rpx;
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #f2f2f2;
}
.template .all-price .all-choose {
  margin-left: 6.4%;
  line-height: 100rpx;
}
.template .all-price .all-choose image {
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
}
.template .all-price .all-choose text {
  margin-left: 20rpx;
  font-size: 28rpx;
  vertical-align: middle;
}
.template .all-price .balance {
  width: 236rpx;
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
  line-height: 100rpx;
  text-align: center;
  background: #d1051f;
}
.template .all-price .price {
  flex: 1;
  position: relative;
}
.template .all-price .price view:first-of-type {
  position: absolute;
  right: 20rpx;
  top: 13rpx;
}
.template .all-price .price view:first-of-type text {
  font-size: 28rpx;
}
.template .all-price .price view:first-of-type text:last-of-type {
  color: #d1051f;
}
.template .all-price .price view:last-of-type {
  position: absolute;
  right: 65rpx;
  top: 56rpx;
  font-size: 20rpx;
  color: #b2b2b2;
}
.template .login-mask {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: #f2f2f2;
}
.template .login-mask image {
  opacity: 0.5;
  position: absolute;
  left: 45%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 50%;
}
.template .login-mask button {
  position: absolute;
  top: 65%;
  left: 50%;
  transform: translateX(-50%);
  margin: 0;
  padding: 0rpx 60rpx;
  background: transparent;
  border: 2px solid #8a8a8a;
  color: #646464;
}
.template .login-mask button::after {
  border: 0;
}
