<!--pages/cart/cart.wxml-->

    <view>
        <view class="cart-list">
            <view wx:if="{{cartList.length === 0 ? true : false}}">
                你的购物车还没有商品
            </view>
            <view wx:if="{{cartList.length !== 0 ? true : false}}">
                <view wx:for="{{cartList}}">
                    {{item.goods_name}}
                    <image src="{{item.list_pic_url}}" />
                    <button bindtap="goodsDelete" data-prodid="{{item.product_id}}">删除商品</button>
                </view>
            </view>
        </view>
        <!-- <view class="coupon-list">
            <view wx:for="{{couponInfoList}}">
                {{item.msg}}
            </view>
        </view> -->
        <button bindtap="buyConfirm">确认下单</button>
        <view class="myOrder">
            <view>
                我的订单
            </view>
            <view wx:for="{{orderList}}" class="orderList">
                <view bindtap="navToOrderDetail"
                data-orderid="{{item.id}}"
                >订单id:{{item.id}} 付款状态：{{item.order_status_text}} 总价：{{item.order_price}}元</view>
                <button class="buyButton" bindtap="balance" 
                data-orderid="{{item.id}}" data-price="{{item.order_price}}">去结算</button>
            </view>
        </view>
    </view>


