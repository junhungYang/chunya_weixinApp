            </view>
            <view class="control">
                <view class="read" data-id="{{item.id}}" data-ispay="{{item.isPay}}" bindtap="showPayBtn">
                    <text>阅读全文</text>
                </view>
                
                <view class="other">
                    <view>
                        <image src="../../img/nuanke/person.png" />
                        <text>{{item.viewCount}}人阅读</text>
                    </view>
                    <view data-id="{{item.id}}" bindtap="collect">
                        <image src="../../img/nuanke/collect.png" />
                        <text>收藏</text>
                    </view>
                    <view>
                        <image src="../../img/nuanke/share.png" />
                        <text>分享</text>
                    </view>
                </view>
            </view>
        </view>
    </scroll-view>
    <scroll-view scroll-y class="list" hidden="{{navIndex===3?false:true}}">
        <view class="item" wx:for="{{radioList}}">
            <view class="title">
                <view class="main">{{item.title}}</view>
                <view class="vice">
                    <text>{{item.brief}}</text>
                </view>
            </view>
