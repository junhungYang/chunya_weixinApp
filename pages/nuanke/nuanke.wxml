<view class="template">
    <view class="nav">
        <text class="{{navIndex===1?'active':''}}" data-index="{{1}}" bindtap="changeNav">美文</text>
        <text class="{{navIndex===2?'active':''}}" data-index="{{2}}" bindtap="changeNav">视觉</text>
        <text class="{{navIndex===3?'active':''}}" data-index="{{3}}" bindtap="changeNav">影音</text>
    </view>
    <scroll-view scroll-y class="list" bindscrolltolower="scrollRefreshList">
        <view class="item" wx:for="{{list}}" wx:for-index="index">
            <view class="title">
                <view class="main">
                    <text>{{item.title}}</text>
                    <text>{{item.isPay===1?'已支付':''}}</text>
                </view>
                <view class="vice">
                    <text>{{item.brief}}</text>
                </view>
            </view>
            <view class="img" data-id="{{item.id}}" data-ispay="{{item.isPay}}"  data-price="{{item.contentPrice}}" bindtap="showPayBtn">
                <image src="{{item.listCoverUrl}}" />
            </view>
            <view class="control">
                <view class="read" data-id="{{item.id}}" data-ispay="{{item.isPay}}" data-price="{{item.contentPrice}}" bindtap="showPayBtn">
                    <text>阅读全文</text>
                </view>
                
                <view class="other">
                    <view>
                        <image src="../../img/nuanke/person.png" />
                        <text>{{item.viewCount}}人阅读</text>
                    </view>
                    <view data-id="{{item.id}}" data-index="{{index}}" bindtap="collect">
                        <image src="{{item.isCollected?'../../img/goodDetail/collect1.png':'../../img/goodDetail/collect.png'}}" />
                        <text>{{item.isCollected?'已收藏':'收藏'}}</text>
                    </view>
                    <view>
                        <button open-type="share" class="share-btn">
                            <image src="../../img/nuanke/share.png" />
                            <text>分享</text>
                        </button>
                    </view>
                </view>
            </view>
        </view>
    </scroll-view>
    <view class="toPay" hidden="{{payBtnHidden}}">
        <view class="bg" bindtap="hiddenPayBtn">
            
        </view>
        <view class="pay"  bindtap="nuankePay">
            支付￥{{activePrice}} 即可阅读
        </view>
    </view>
</view>
