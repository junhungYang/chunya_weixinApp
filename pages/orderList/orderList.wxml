<view class="template">
    <view class="nav">
        <view>
            <text class="active">全部</text>
        </view>
        <view>
            <text>待付款</text>
        </view>
        <view>
            <text>待收货</text>
        </view>
        <view>
            <text>待评价</text>
        </view>
    </view>
    <view class="content">
        <view class="item" wx:for="{{orderList}}">
            <view class="title">
                <image src="../../img/orderList/icon1.png" />
                <text>春芽好物</text>
                <text>{{item.order_status_text}}</text>
            </view>
            <view class="desc">
                <image src="../../img/orderDetail/good.jpg" />
                <view class="text">
                    <text class="name">善缘大米，送礼佳品，温度之作</text>
                    <text class="price">￥{{item.order_price}}</text>
                    <!--<view class="other">
                            公益捐赠0.95元
                    </view>-->
                </view>
                <text class="quantity">×1</text>
            </view>
            <view class="control">
                <view class="btn-group">
                    <view>
                        延长收货
                    </view>
                    <view>
                        查看物流
                    </view>
                    <view>
                        确认收货
                    </view>
                </view>
            </view>
        </view>
        <view class="item">
            <view class="title">
                <image src="../../img/orderList/icon1.png" />
                <text>春芽好物</text>
                <text>已发货</text>
            </view>
            <view class="desc">
                <image src="../../img/orderDetail/good.jpg" />
                <view class="text">
                    <text class="name">善缘大米，送礼佳品，温度之作</text>
                    <text class="price">￥950.00</text>
                    <view class="other">
                            公益捐赠0.95元
                    </view>
                </view>
                <text class="quantity">×1</text>
            </view>
            <view class="control">
                <view class="btn-group">
                    <view>
                        延长收货
                    </view>
                    <view>
                        查看物流
                    </view>
                    <view>
                        确认收货
                    </view>
                </view>
            </view>
        </view>
    </view>
</view>

